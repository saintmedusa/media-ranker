<main>
<% @works.keys.each do |category|%>
  <h2><%="#{category.capitalize}s"%></h2>
  <table class="works">
    <tr>
      <th>Title</th>
      <th>Creator</th> 
      <th>Published</th>
      <th> </th>
    </tr>
    <% @works[category].each do |work|%>
      <tr>
        <td><%=link_to work.title, work_path(work)%></td>
        <td><%=work.creator%></td>
        <td><%=work.published%></td>
        <td> </td>
      </tr>
    <%end%>
  </table>
<%end%>
<%= link_to "Add a new work", new_work_path%>
</main>