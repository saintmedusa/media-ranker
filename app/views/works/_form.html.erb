<%= form_with model: @work do |f| %>
  <%= f.label :category %>
  <%= f.select :category, Work.categories %>
  <br>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :creator %>
  <%= f.text_field :creator %>
  <br>
  <%= f.label "Year published" %>
  <%= f.text_field :published %>
  <br>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <br>
  <%= f.submit "#{action_name} Work" %>
<% end %>