<%= form_with model: @work do |f| %>
  <%= f.label :creator %>
  <%= f.select :author_id, ["album", "book", "movie"] %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :creator %>
  <%= f.text_field :creator %>

  <%= f.label :published %>
  <%= f.text_field :published %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit "#{action_name} Work" %>
<% end %>